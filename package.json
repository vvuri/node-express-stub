    "babel-preset-env": "^1.7.0",
    "babel-preset-es2017": "^6.24.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
